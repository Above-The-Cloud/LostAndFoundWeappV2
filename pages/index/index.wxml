<view class="news-item-container">
	<block wx:for="{{listofitem}}" wx:for-index="id">
		<text wx:if="{{item.header}}"></text>
		<view wx:else class="news-item-cls">
			<view class='userinfo-cls'>
				<!-- <navigator url="../userinfo/userinfo?userid={{item.userid}}"> -->
				<image src="{{item.usericon}}" class='icon-image-cls'></image>
				<!-- </navigator> -->
				<view class='username-cls'>
					<!-- <navigator url="../userinfo/userinfo?userid={{item.userid}}"> -->
					<text selectable='true'>{{item.username}}</text>
					<!-- </navigator> -->
				</view>
				<view bindtap='toApply' data-phone="{{item.userphone}}" data-applyId="{{item.postid}}" class='apply-view-cls'>申领
				</view>
			</view>
			<view class="news-card-cls">
				<view class='news-info-cls'>
					<view class='news-info-desc-cls'>
						<text class="news-item-title-cls"> <text style="color:gray"> 拾取物件：</text>{{item.title}}</text>
					</view>
					<view class='news-info-desc-cls'>
						<text class="news-item-title-cls"><text style="color:gray"> 拾取地点：</text>{{item.address}}</text>
					</view>
					<view class='news-info-time-cls'>
						<text class='time-cls'>{{item.sub_time}}</text>
					</view>
					<view class='news-info-state-cls'>
						<text class='state-cls'>{{item.state}}</text></view>
				</view>
				<view class='new-image-container-cls'>
					<image bindtap="photopreview" data-list="{{item.imagelist}}" data-src="{{item.imagelist[0]}}"
						mode="aspectFill" src="{{item.imagelist[0]}}" class='news-img-cls'></image>
					<view class='tag-cls'>
						<text>{{item.type}}</text>
					</view>
				</view>
			</view>
		</view>
	</block>
</view>