.apply-view-cls {
  margin-top: 20rpx;
  background-color: #006a71;
  color: #ecf4f3;
  text-align: center;
  display: flex;
  position: relative;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  letter-spacing: 2px;
  padding: 5rpx;
  font-weight: bold;
}

.banners {
  width: 100%;
  height: 400rpx;
  position: relative;
  top: 0;
}

.image-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.append {
  z-index: 1;
  width: 40px;
  height: 40px;
  bottom: 5px;
  right: 5px;
  position: fixed;
}

.swiper-tab {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 50%;
  border-bottom: 1rpx solid #ededed;
}

.swiper-tab-item {
  position: relative;
  flex: 1;
  /* top: 200px; */
  text-align: center;
  align-items: center;
  font-size: 26rpx;
  color: grey;
  line-height: 80rpx;
  left: 40%;
  z-index: 1;
}

.item-sub-tab {
  position: relative;
  flex: 1;
  text-align: center;
  align-items: center;
  height: 180rpx;
  z-index: 1;
}

.category {
  position: relative;
  border-radius: 20rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  left: 10%;
  font-size: 25rpx;
  border:2px solid #006a71;
  color: #006a71;
  font-weight: bold;
  z-index: 1;
}
.schoolcard-cls {
  position: absolute;
  right: 5%;
  top:20rpx;
  font-size: 12px;
  width: 5%;
  height: 4%;
  z-index: 2;
}
.active {
  color: #006a71;
  border-bottom: 2px solid #006a71;
  font-weight: bold;
}

.statechange {
  position: absolute;
  left: 580rpx;
  top: 210px;
  font-size: 12px;
  z-index: 1;
}

.refresh {
  position: absolute;
  right: 5%;
  top: 0px;
  font-size: 12px;
  width: 5%;
  height: 4%;
  z-index: 2;
}

.banner {
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}
.category-spaceholder-image-cls{
