}

.userinfo-nickname {
  margin-top: 4.1%;
  font-size: 40rpx;
  text-align: left;
}

.userinfo-contact-type {
  font-size: 30rpx;
  color:black;
  font-weight: bold;
}

.userinfo-phonenumber {
  font-size: 30rpx;
  color:black;
}

.userinfo {
  display: flex;
  flex-direction: row;
}

._setting {
  position: absolute;
  right: 5%;
  top: 120rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 2;
}

