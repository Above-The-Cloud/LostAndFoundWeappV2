.user-container {
  padding-top: 100rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
}

.user-info {
  margin-left: 50rpx;
  margin-left: 50rpx;
  flex-direction: row;
  position: relative;
  display: flex;
}

.user_ID {
  position: relative;
  text-align: center;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  color: #fff;
  top: 0;
  left: 0;
  z-index: 3;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
  border: 1px solid gray;
  vertical-align: bottom;
}

.user_infomation {
  text-align: left;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 50rpx;
  /* padding-top: 10px; */
  /* justify-content: center; */
  /* align-items: center; */
  /*交叉轴对齐方式*/
